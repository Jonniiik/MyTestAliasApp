<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentTeams"
    android:background="@color/yellow">

    <com.rafaelbarbosatec.archivimentview.AchievementView
        android:id="@+id/achievementViewInformationTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ac_color="@color/colorPrimaryDark"
        app:ac_text_color="@color/colorAccent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewTeam"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <com.manojbhadane.QButton
            android:id="@+id/buttonAddTeams"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/addTeam"
            android:textColor="@color/white"
            app:qb_backgroundColor="@color/blue"
            app:qb_radius="100"
            app:qb_strokeColor="@color/blueDark"
            app:qb_strokeWidth="5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <com.manojbhadane.QButton
            android:id="@+id/buttonFragmentCategories"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/categories"
            android:textColor="@color/white"
            app:qb_backgroundColor="@color/green"
            app:qb_radius="100"
            app:qb_strokeColor="@color/darkGreen"
            app:qb_strokeWidth="5" />
    </LinearLayout>

</RelativeLayout>